{
	"rules": {
		"eol-last": "error",
		"no-undef": "error",
		"indent": ["error", "tab", {
			"SwitchCase": 1
		}],
		"quotes": ["error", "single"],
		"semi": ["error", "never"],
		"no-underscore-dangle": "off",
		"no-multi-spaces": "error",
		"camelcase": "off",
		"no-console": "off",
		"new-cap": "off",
		"brace-style": ["error", "1tbs", {
			"allowSingleLine": true
		}],
		"no-unused-vars": ["error", {
			"vars": "all",
			"args": "none"
		}],
		"semi-spacing": ["error", {
			"before": false,
			"after": true
		}],
		"space-in-parens": ["error", "always"],
		"object-curly-spacing": ["error", "always"],
		"array-bracket-spacing": ["error", "always"],
		"computed-property-spacing": ["error", "always"],
		"arrow-spacing": ["error", {
			"before": true,
			"after": true
		}],
		"no-inline-comments": "off",
		"max-len": ["error", 100, 2, {
			"tabWidth": 2,
			"ignoreUrls": true,
			"ignoreComments": true,
		}],
		"key-spacing": ["error", {
			"beforeColon": false,
			"afterColon": true,
			"mode": "strict"
		}],
		"space-infix-ops": "error",
		"keyword-spacing": ["error", {
			"before": true,
			"after": true,
		}],
		"comma-dangle": ["error", "always-multiline"],
		"no-restricted-globals": ["error",
			"find",
			"event"
		]
	},
	"env": {
		"es6": true,
		"browser": true,
		"node": true,
		"mocha": true,
	},
	"parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module",
	},
}
